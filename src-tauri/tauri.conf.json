{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TaskLite",
  "version": "0.1.0",
  "identifier": "fun.ricezero.app.tasklite",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "TaskLite",
        "width": 1000,
        "height": 650,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  }
}